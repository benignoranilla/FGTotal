<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:FGTotal.ViewModel" 
             x:Class="FGTotal.Views.Seguidor.SendMensaje"
             xmlns:local="clr-namespace:CustomRendererDemo"
             NavigationPage.HasNavigationBar="True"
             NavigationPage.HasBackButton="True"
             BackgroundImageSource="fondo_config">
    <!--<ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="notify.png" Priority="0" Order="Primary" Clicked="TapGestureRecognizer_Tapped"></ToolbarItem>
        <ToolbarItem IconImageSource="mensajes"  Priority="1" Order="Primary" Clicked="TapGestureRecognizer_Tapped_1"></ToolbarItem>
    </ContentPage.ToolbarItems>-->
    
    <ContentPage.BindingContext>
        <viewModel:DetalleMensajeViewModel></viewModel:DetalleMensajeViewModel>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout>

            <!-- Content -->
            <ScrollView  HorizontalOptions="CenterAndExpand" Margin="0,0,0,0">
                <AbsoluteLayout Padding="10"  VerticalOptions="CenterAndExpand">
                    <Label  
                            Text="{Binding nombreEmisor}"
                            TextColor="White"
                            AbsoluteLayout.LayoutBounds="0,40,1,40" 
                            AbsoluteLayout.LayoutFlags="XProportional,WidthProportional" 
                            HorizontalOptions="FillAndExpand"/>
                    <Label  
                            Text="{Binding mensaje}"
                            TextColor="White"
                            AbsoluteLayout.LayoutBounds="0,85,1,40" 
                            AbsoluteLayout.LayoutFlags="XProportional,WidthProportional" 
                            HorizontalOptions="FillAndExpand"/>
                    <Entry 
                            x:Name="Mensaje"
                            AbsoluteLayout.LayoutBounds="0,500,250,40" 
                            Placeholder="NickName"
                            TextColor="White"
                            PlaceholderColor="White"
                            HorizontalOptions="FillAndExpand"/>

                    <Button  
                        AbsoluteLayout.LayoutBounds="1,550,90,40" 
                        HorizontalOptions="FillAndExpand" 
                        Text="Register" 
                        TextColor="White" BackgroundColor="Black">
                        <Button.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_4"/>
                        </Button.GestureRecognizers>
                    </Button>
                </AbsoluteLayout>
            </ScrollView>

            <!--  Footer  -->
            <StackLayout
                Margin="0,0,0,0"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="EndAndExpand">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <StackLayout 
                        Grid.Row="0"
                        VerticalOptions="End">
                        <Entry
                            ClassId="Mensaje"
                            x:Name="TextoMensaje"
                            Placeholder="Escriba un mensaje..."
                            FontSize="Small"
                            BackgroundColor="Transparent"
                            HorizontalOptions="Start"
                            VerticalOptions="End"
                            WidthRequest="240"
                            HeightRequest="50"
                            Margin="20,0,0,0"
                            PlaceholderColor="Gray">
                        </Entry>
                    </StackLayout>
                    <StackLayout
                        Grid.Row="0">
                        <Button
                            HorizontalOptions="End"
                            WidthRequest="100"
                            Margin="0,0,0,0"
                            CornerRadius="50"
                            BackgroundColor="Green"
                            TextColor="White"
                            Text="Enviar DM">
                            <Button.GestureRecognizers>
                                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_4"/>
                            </Button.GestureRecognizers>
                        </Button>
                    </StackLayout>
                    <!--  Franja  -->
                    <BoxView
                        Margin="0"
                        Grid.Row="1"
                        BackgroundColor="#F7F7F7"
                        HeightRequest="1"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="StartAndExpand"/>
                    <Frame
                        Padding="0"
                        Grid.Row="2"
                        BackgroundColor="#001B4C"
                        HasShadow="True"
                        VerticalOptions="EndAndExpand"
                        HorizontalOptions="FillAndExpand">
                        <StackLayout
                            Margin="0,0,0,0"
                            HorizontalOptions="FillAndExpand"
                            Orientation="Horizontal"
                            HeightRequest="50"
                            VerticalOptions="CenterAndExpand"
                            BackgroundColor="#001B4C">

                            <!--  Opción 1  -->
                            <StackLayout Margin="25,10,25,10" HorizontalOptions="FillAndExpand">
                                <Frame
                                Padding="0"
                                BackgroundColor="Transparent"
                                HasShadow="False"
                                HeightRequest="50"
                                WidthRequest="50">
                                    <Image
                                    Aspect="AspectFit"
                                    HeightRequest="40"
                                    HorizontalOptions="CenterAndExpand"
                                    Source="HOME"
                                    VerticalOptions="CenterAndExpand"
                                    WidthRequest="40" />
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                                    </Frame.GestureRecognizers>
                                </Frame>

                            </StackLayout>

                            <!--  Opción 2  -->
                            <StackLayout Margin="25,10,25,10" HorizontalOptions="FillAndExpand">
                                <Frame
                                Padding="0"
                                BackgroundColor="Transparent"
                                HasShadow="False"
                                HeightRequest="50"
                                WidthRequest="50">
                                    <Image
                                    Aspect="AspectFit"
                                    HeightRequest="30"
                                    HorizontalOptions="CenterAndExpand"
                                    Source="FGPLAY_LOGO"
                                    VerticalOptions="CenterAndExpand"
                                    WidthRequest="30" />
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_1" />
                                    </Frame.GestureRecognizers>
                                </Frame>

                            </StackLayout>

                            <!--  Opción 3  -->
                            <StackLayout Margin="25,10,25,10" HorizontalOptions="FillAndExpand">
                                <Frame
                                Padding="0"
                                BackgroundColor="Transparent"
                                HasShadow="False"
                                HeightRequest="50"
                                WidthRequest="50">
                                    <Image
                                    Aspect="AspectFit"
                                    HeightRequest="30"
                                    HorizontalOptions="CenterAndExpand"
                                    Source="search"
                                    VerticalOptions="CenterAndExpand"
                                    WidthRequest="30" />
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_2" />
                                    </Frame.GestureRecognizers>
                                </Frame>

                            </StackLayout>

                            <!--  Opción 4  -->
                            <StackLayout Margin="25,10,25,10" HorizontalOptions="FillAndExpand">
                                <Frame
                                Padding="0"
                                BackgroundColor="Transparent"
                                HasShadow="False"
                                HeightRequest="50"
                                WidthRequest="50">
                                    <Image
                                    Aspect="AspectFit"
                                    HeightRequest="40"
                                    HorizontalOptions="CenterAndExpand"
                                    Source="PERFIL"
                                    VerticalOptions="CenterAndExpand"
                                    WidthRequest="40" />
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_3" />
                                    </Frame.GestureRecognizers>
                                </Frame>

                            </StackLayout>

                        </StackLayout>
                    </Frame>
                </Grid>
            </StackLayout>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>