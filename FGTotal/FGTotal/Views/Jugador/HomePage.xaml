                           RelativeLayout.WidthConstraint="{ConstraintExpression Type=Constant, Constant=370}">
                            <StackLayout Orientation="Horizontal">
                                <Image
                                    Margin="20,10,0,10"
                                    Aspect="AspectFit"
                                    HeightRequest="38"
                                    Source="search"
                                    WidthRequest="18"/>
                                <FGTotal:CustomEntry HorizontalOptions="FillAndExpand" />
                            </StackLayout>
                        </Frame>

                        <StackLayout>
                            <ListView Margin="20,60,0,20" ItemsSource="{Binding TimeLine}" RowHeight="100">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <ViewCell>
                                            <StackLayout>
                                                <Grid RowSpacing="2">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition/>
                                                        <RowDefinition/>
                                                        <RowDefinition/>
                                                        <RowDefinition/>
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="40"/>
                                                        <ColumnDefinition Width="100"/>
                                                        <ColumnDefinition Width="100"/>
                                                        <ColumnDefinition Width="100"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Image Source="user1.png" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" HorizontalOptions="Start"/>
                                                    <Label Text="{Binding nombresUsuario}" x:Name="Nusuario" TextColor="White" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"/>
                                                    <Label Text="Publicó un nuevo estado" TextColor="Lime" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"/>
                                                    <Label Text="{Binding descripcion}" TextColor="White" FontSize="17" FontAttributes="Bold" HorizontalTextAlignment="Center" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4"></Label>
                                                    <Label Text="{Binding fechaCreacion}" TextColor="White" FontSize="Small" HorizontalTextAlignment="End" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4"></Label>
                                                </Grid>
                                            </StackLayout>
                                        </ViewCell>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackLayout>

